            </action>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">
                    Ced_GiftCard::product/configure/updatecart.phtml
                </argument>
            </action>
        </referenceBlock>
    </body>
</page> 