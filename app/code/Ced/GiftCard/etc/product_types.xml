<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Catalog:etc/product_types.xsd">

    <type name="giftcard" label="Gift Card"
            modelInstance="Ced\GiftCard\Model\Product\Type\GiftCard"
          indexPriority="50" isQty="true" sortOrder="90">
        <customAttributes>
            <attribute name="is_real_product" value="false"/>
            <attribute name="refundable" value="false"/>
        </customAttributes>
    </type>

    <composableTypes> 
        <type name="giftcard" />
    </composableTypes>

</config>
